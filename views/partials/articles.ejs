<% if( articles.length > 0) { %>
    <div id="accordion" class="mb-3">
        <% articles.map(function(article, i) { %>
            <div class="card mb-3">
                <div class="card-header">
                    <a class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse<%= i %>" aria-expanded="false" aria-controls="collapse<%= i %>">
                        <h5 class="mb-0">
                            <%= article.title %>
                        </h5>
                    </a>
                    <a class="float-right btn-link" href="<%= article.link %>" target="_blank"><i class="fas fa-external-link-alt ml-3"></i></a>
                    <% if (article.notes.length > 0) { %>
                        <span class="float-right"><%= article.notes.length %><i class="far fa-comments ml-3 mr-3"></i></span>
                    <% } %>
                    
                </div>
                <div id="collapse<%= i %>" class="collapse" aria-labelledby="heading<%= i %>" data-parent="#accordion">
                    <div class="card-body">
                        <a name="<%= article._id %>"></a>
        
                        <%- include ./notes %>

                    </div>
                </div>
            </div>
        <% }); %>
    </div>

<% } else { %>
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <button class="btn btn-link">
                    Scrape new articles from the web...
                </button>
            </h5>
        </div>
    </div>
<% } %>